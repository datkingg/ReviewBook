<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookSaveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mau6"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgExitSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="thoát trang ds sách lưu"
            android:background="#00FFFFFF"
            android:src="@drawable/arrow_left_solid" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/notoseriftc_medium"
            android:text="Sách đã lưu"
            android:textAlignment="center"
            android:textColor="#090606"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp" />

</LinearLayout>