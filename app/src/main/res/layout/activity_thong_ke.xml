<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThongKeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnThoatTK"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Thoat TK"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_left_solid"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/notoseriftc_medium"
            android:text="Quản lý thống kê"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/edTimKiemTK"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:hint="Nhập mã thống kê"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_trong"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnTimKiemTK"
            android:contentDescription="Tìm kiếm TK"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/search"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChar"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="13dp">
            <TableRow>
                <TextView
                    android:text="@string/danh_m_c"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="@string/s_l_ng"
                    android:textStyle="bold"
                    android:padding="8dp"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>